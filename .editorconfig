# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{cs,js,ts,tsx,jsx,json,yaml,yml}]
indent_style = space
indent_size = 2

# C# files
[*.cs]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Solution files
[*.sln]
indent_style = tab

# Project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2
